{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Front-End",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/front-end/node_modules/.bin/nuxt",
        "args": ["dev"],
        "cwd": "${workspaceFolder}/front-end",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Back-End",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/back-end/artisan",
        "args": ["serve"],
        "cwd": "${workspaceFolder}/back-end",
        "runtimeExecutable": "php",
        "console": "integratedTerminal"
      }
    ],
    "compounds": [
      {
        "name": "Run Full Project",
        "configurations": ["Run Front-End", "Run Back-End"]
      }
    ]
  }
  